{
    "version": 6,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 22,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "base",
            "hidden": true,
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/${presetName}"
        },
        {
            "name": "android-arm64",
            "inherits": "base",
            "cacheVariables": {
                "CMAKE_TOOLCHAIN_FILE": {
                    "value": "${env:ANDROID_NDK_HOME}/build/cmake/android.toolchain.cmake",
                    "type": "FILEPATH"
                },
                "ANDROID_ABI": "arm64-v8a",
                "ANDROID_PLATFORM": "24",
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "android-x86_64",
            "inherits": "base",
            "cacheVariables": {
                "CMAKE_TOOLCHAIN_FILE": {
                    "value": "${env:ANDROID_NDK_HOME}/build/cmake/android.toolchain.cmake",
                    "type": "FILEPATH"
                },
                "ANDROID_ABI": "x86_64",
                "ANDROID_PLATFORM": "24",
                "CMAKE_BUILD_TYPE": "Debug"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "android-arm64",
            "configurePreset": "android-arm64"
        },
        {
            "name": "android-x86_64",
            "configurePreset": "android-x86_64"
        }
    ],
    "testPresets": []
}