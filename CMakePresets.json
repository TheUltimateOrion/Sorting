{
    "version": 6,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 22,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "base",
            "hidden": true,
            "binaryDir": "${sourceDir}/build/${presetName}",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "windows-x86_64-gcc",
            "inherits": "base",
            "generator": "Ninja",
            "displayName": "windows-x86_64-gcc",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "gcc.exe",
                "CMAKE_CXX_COMPILER": "g++.exe"
            }
        },
        {
            "name": "windows-x86_64-clang",
            "inherits": "base",
            "generator": "Ninja",
            "displayName": "windows-x86_64-clang",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "clang.exe",
                "CMAKE_CXX_COMPILER": "clang++.exe"
            }
        },
        {
            "name": "macos-arm64",
            "inherits": "base",
            "displayName": "macos-arm64"
        },
        {
            "name": "linux-amd64",
            "generator": "Ninja",
            "inherits": "base",
            "displayName": "linux-amd64"
        }
    ],
    "buildPresets": [
        {
            "name": "windows-x86_64-gcc",
            "configurePreset": "windows-x86_64-gcc"
        },
        {
            "name": "windows-x86_64-clang",
            "configurePreset": "windows-x86_64-clang"
        },
        {
            "name": "macos-arm64",
            "configurePreset": "macos-arm64"
        },
        {
            "name": "linux-amd64",
            "configurePreset": "linux-amd64"
        }
    ],
    "testPresets": []
}